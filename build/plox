#!/usr/bin/env python3


import sys 
from lox.run import run_prompt, run_script
from lox import state 


def main():
    state.reset_state()
    if len(sys.argv) == 1:
        run_prompt.run_prompt()
    elif len(sys.argv) == 2:
        run_script.run_script(sys.argv[1])
    else:
        print('usage : plox [script]')
        sys.exit() 



if __name__ == '__main__':
    main()